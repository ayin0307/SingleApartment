@model sln_SingelApartment.ViewModels.CAboutRoomViewModel
@{
    int num = 101;
}

@foreach (var item in Model.roomStyleViewModels)
{


    string picname = "房間" + num + ".jpg";
    num++;

    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-room mb-80">
            <div class="room-img">
                <a href="#"><img src="~/Content/Room/images/room/@picname" alt=""></a>
            </div>
            <div class="room-desc">
                <div class="room-name">
                    <h3><a href="#">@Html.DisplayFor(modelItem => item.entity_roomstyle.Room.FirstOrDefault().RoomName)</a></h3>
                </div>
                <div class="room-rent">
                    <h5>可容納人數：@Html.DisplayFor(modelItem => item.maxnumberofpeople)</h5><br>
                    <h5>@Html.DisplayFor(modelItem => item.rent) / <span>月</span></h5>
                </div>
                <div class="room-book">
                    <a href="~/Room/ListRoomDetail/@item.ID">Room Detail</a>
                </div>
            </div>
        </div>
    </div>
}
